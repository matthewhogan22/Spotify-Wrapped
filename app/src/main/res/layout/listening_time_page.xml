<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ListeningTimePage">

    <RelativeLayout
        android:id="@+id/top_track"
        android:layout_width="412dp"
        android:layout_height="800dp"
        android:background="#EBF667"
        android:clipToOutline="true">

        <TextView
            android:id="@+id/you_listened"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="95dp"
            android:layout_marginTop="65dp"
            android:layout_marginEnd="95dp"
            android:gravity="center_horizontal|top"
            android:text="You listened for"
            android:textAppearance="@style/you_listened" />

        <TextView
            android:id="@+id/insert_mins"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="74dp"
            android:layout_marginTop="228dp"
            android:layout_marginEnd="74dp"
            android:gravity="center_horizontal|top"
            android:text="@string/insert_mins"
            android:textAppearance="@style/insert_mins" />

        <TextView
            android:id="@+id/minutes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="147dp"
            android:layout_marginTop="367dp"
            android:layout_marginEnd="147dp"
            android:gravity="center_horizontal|top"
            android:text="minutes"
            android:textAppearance="@style/minutes" />

        <Button
            android:id="@+id/wrappedDoneButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="157dp"
            android:layout_marginBottom="60dp"
            android:backgroundTint="@color/green"
            android:text="Done"
            android:textColor="@color/black" />
    </RelativeLayout>

</RelativeLayout>